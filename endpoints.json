{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 35,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": 1527695953341,
          "votes": 0,
          "comment_count": 1
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object with the number id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an article after updating the votes",
    "examplePatch": { "inc_votes": 10 }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of commments for the article with the id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341
      }
    }
  }
}
